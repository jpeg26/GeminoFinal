<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.mlabs.bbm.firstandroidapp_morningclass.AccountRegister">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Email:"
        android:id="@+id/regEmailtxt"
        android:layout_marginTop="65dp"
        android:layout_alignParentTop="true"
        android:layout_toLeftOf="@+id/registerPassword"
        android:layout_toStartOf="@+id/registerPassword" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Password:"
        android:id="@+id/regPasstxt"
        android:layout_marginTop="21dp"
        android:layout_below="@+id/regEmailtxt"
        android:layout_alignRight="@+id/regVerifyPasstxt"
        android:layout_alignEnd="@+id/regVerifyPasstxt" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Verify Password:"
        android:id="@+id/regVerifyPasstxt"
        android:layout_marginTop="23dp"
        android:layout_below="@+id/registerPassword"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Register"
        android:id="@+id/btnRegister"
        android:layout_marginTop="33dp"
        android:layout_below="@+id/regVerifyPasstxt"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/registerEmail"
        android:layout_above="@+id/registerPassword"
        android:layout_toRightOf="@+id/regEmailtxt"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/registerPassword"
        android:layout_toRightOf="@+id/regPasstxt"
        android:layout_alignRight="@+id/btnRegister"
        android:layout_alignEnd="@+id/btnRegister"
        android:layout_below="@+id/regEmailtxt"
        android:layout_alignBottom="@+id/regPasstxt" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/registerVerifyPass"
        android:layout_above="@+id/btnRegister"
        android:layout_below="@+id/registerPassword"
        android:layout_alignRight="@+id/registerPassword"
        android:layout_alignEnd="@+id/registerPassword"
        android:layout_toRightOf="@+id/regVerifyPasstxt"
        android:layout_toEndOf="@+id/regVerifyPasstxt" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Register Account"
        android:id="@+id/txtRegisterhere"
        android:layout_above="@+id/registerEmail"
        android:layout_centerHorizontal="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="View Accounts"
        android:id="@+id/buttonViewAccounts"
        android:layout_marginTop="25dp"
        android:layout_below="@+id/btnRegister"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />
</RelativeLayout>
