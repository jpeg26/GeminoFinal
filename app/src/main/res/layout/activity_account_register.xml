<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.mlabs.bbm.firstandroidapp_morningclass.MainAct.AccountRegister">


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Email:"
        android:id="@+id/regEmailtxt"
            android:layout_marginTop="65dp"
           android:layout_alignParentTop="true"
            android:layout_toLeftOf="@+id/registerPassword"
            android:layout_toStartOf="@+id/registerPassword" />
            android:layout_below="@+id/regUnametxt"
            android:layout_alignRight="@+id/regUnametxt"
            android:layout_alignEnd="@+id/regUnametxt"
            android:layout_marginTop="35dp" />

    <Button
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
            android:text="Password:"
            android:id="@+id/regPasstxt"
            android:layout_marginTop="21dp"
            android:layout_below="@+id/regEmailtxt"
            android:layout_alignRight="@+id/regVerifyPasstxt"
            android:layout_alignEnd="@+id/regVerifyPasstxt" />
            android:text="Register"
            android:id="@+id/btnRegister"
            android:layout_above="@+id/buttonViewAccounts"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:layout_marginBottom="29dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" />

        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/registerEmail"
            android:layout_alignBottom="@+id/regEmailtxt"
            android:layout_toRightOf="@+id/regEmailtxt"
            android:layout_alignRight="@+id/btnRegister"
            android:layout_alignEnd="@+id/btnRegister" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
            android:text="Verify Password:"
    android:id="@+id/regVerifyPasstxt"
            android:layout_marginTop="23dp"
            android:layout_below="@+id/registerPassword"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" />
            android:text="Register Account"
            android:id="@+id/txtRegisterhere"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
            android:text="Register"
            android:id="@+id/btnRegister"
            android:layout_marginTop="33dp"
            android:layout_below="@+id/regVerifyPasstxt"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:text="View Accounts"
            android:id="@+id/buttonViewAccounts"
            android:layout_alignParentBottom="true"
    android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true" />
            android:layout_alignParentEnd="true"
            android:layout_marginBottom="55dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="First Name:"
            android:id="@+id/regFnametxt"
            android:layout_marginTop="35dp"
            android:layout_below="@+id/txtRegisterhere" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
            android:id="@+id/registerEmail"
            android:layout_above="@+id/registerPassword"
            android:layout_toRightOf="@+id/regEmailtxt"
            android:id="@+id/registerFname"
            android:layout_alignBottom="@+id/regFnametxt"
    android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true" />
            android:layout_alignParentEnd="true"
            android:layout_toRightOf="@+id/regFnametxt"
            android:layout_toEndOf="@+id/regFnametxt" />

    <TextView
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
            android:id="@+id/registerPassword"
            android:layout_toRightOf="@+id/regPasstxt"
            android:layout_alignRight="@+id/btnRegister"
            android:layout_alignEnd="@+id/btnRegister"
            android:layout_below="@+id/regEmailtxt"
            android:layout_alignBottom="@+id/regPasstxt" />
            android:text="Last Name:"
            android:id="@+id/regLnametxt"
            android:layout_below="@+id/regFnametxt"
            android:layout_alignLeft="@+id/regFnametxt"
            android:layout_alignStart="@+id/regFnametxt"
            android:layout_marginTop="33dp" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
            android:id="@+id/registerVerifyPass"
            android:layout_above="@+id/btnRegister"
            android:layout_below="@+id/registerPassword"
            android:layout_alignRight="@+id/registerPassword"
            android:layout_alignEnd="@+id/registerPassword"
            android:layout_toRightOf="@+id/regVerifyPasstxt"
            android:layout_toEndOf="@+id/regVerifyPasstxt" />
            android:id="@+id/registerLname"
            android:layout_alignBottom="@+id/regLnametxt"
            android:layout_toRightOf="@+id/regLnametxt"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
            android:text="Register Account"
            android:id="@+id/txtRegisterhere"
            android:layout_above="@+id/registerEmail"
            android:layout_centerHorizontal="true" />
            android:text="Username:"
            android:id="@+id/regUnametxt"
            android:layout_marginTop="35dp"
            android:layout_below="@+id/regLnametxt"
            android:layout_toLeftOf="@+id/registerFname"
            android:layout_toStartOf="@+id/registerFname" />

        <Button
        <EditText
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
            android:text="View Accounts"
            android:id="@+id/buttonViewAccounts"
            android:id="@+id/registerUname"
            android:layout_alignBaseline="@+id/registerVerifyPass"
            android:layout_alignBottom="@+id/registerVerifyPass"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Back"
        android:id="@+id/buttonBack"
            android:layout_marginTop="25dp"
            android:layout_below="@+id/buttonViewAccounts"
            android:layout_alignParentBottom="true"
    android:layout_centerHorizontal="true" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Password:"
            android:id="@+id/regPasswordtxt"
            android:layout_centerVertical="true"
            android:layout_alignRight="@+id/regLnametxt"
            android:layout_alignEnd="@+id/regLnametxt" />

        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/registerPassword"
            android:layout_alignBottom="@+id/regPasswordtxt"
            android:layout_toRightOf="@+id/regEmailtxt"
            android:layout_alignRight="@+id/registerEmail"
            android:layout_alignEnd="@+id/registerEmail" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Verify Password:"
            android:id="@+id/regVerifyPasswordtxt"
            android:layout_below="@+id/regPasswordtxt"
            android:layout_toLeftOf="@+id/registerPassword"
            android:layout_toStartOf="@+id/registerPassword"
            android:layout_marginTop="23dp" />

        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/registerVerifyPassword"
            android:layout_alignBottom="@+id/regVerifyPasswordtxt"
            android:layout_toRightOf="@+id/regVerifyPasswordtxt"
            android:layout_alignRight="@+id/registerPassword"
            android:layout_alignEnd="@+id/registerPassword" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Large Text"
        android:id="@+id/textView2"
        android:layout_alignBottom="@+id/regVerifyPasstxt"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginLeft="315dp"
        android:layout_marginStart="315dp" />

</RelativeLayout>