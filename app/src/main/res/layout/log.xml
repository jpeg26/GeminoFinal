<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:background="@drawable/test"
    tools:context=".Login">

    <Button
        android:id="@+id/button"
        android:layout_width="75dp"
        android:layout_height="75dp"
        android:padding="10dp"
        android:background="@drawable/android_button"
        style="?android:attr/borderlessButtonStyle"
        android:layout_above="@+id/suBtn"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="31dp" />

    <EditText
        android:id="@+id/Emailtxt"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:padding="10dp"
        android:background="@drawable/android_edittxt"
        android:inputType="textEmailAddress"
        android:hint="Email"
        android:layout_below="@+id/imageView"
        android:layout_alignLeft="@+id/Passwordtxt"
        android:layout_alignStart="@+id/Passwordtxt"
        android:layout_marginTop="30dp" />

    <EditText
        android:id="@+id/Passwordtxt"
        android:layout_width="265dp"
        android:layout_height="wrap_content"
        android:padding="10dp"
        android:background="@drawable/android_edittxt"
        android:inputType="textPassword"
        android:hint="Password"
        android:layout_below="@+id/Emailtxt"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginLeft="25dp"
        android:layout_marginTop="25dp" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/imageView"
        android:src="@drawable/login_text"
        android:contentDescription="Log in"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Show"
        android:id="@+id/show"
        android:textSize="20dp"
        android:layout_alignBottom="@+id/Passwordtxt"
        android:layout_alignRight="@+id/imageView"
        android:layout_alignEnd="@+id/imageView"
        android:layout_marginBottom="10dp" />

    <Button
        android:layout_width="125dp"
        android:layout_height="50dp"
        android:background="@drawable/android_register"
        style="?android:attr/borderlessButtonStyle"
        android:id="@+id/suBtn"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true" />

</RelativeLayout>
