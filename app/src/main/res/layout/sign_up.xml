<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">
    <ImageView android:id="@+id/splash"
        android:layout_width="wrap_content"
        android:layout_height="fill_parent"
        android:src="@drawable/glamour"
        android:scaleType="fitStart"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Email:"
        android:id="@+id/textView3"
        android:layout_above="@+id/email_signup"
        android:layout_alignLeft="@+id/splash"
        android:layout_alignStart="@+id/splash" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textEmailAddress"
        android:ems="10"
        android:id="@+id/email_signup"
        android:layout_centerVertical="true"
        android:layout_alignLeft="@+id/splash"
        android:layout_alignStart="@+id/splash"
        android:layout_alignRight="@+id/splash"
        android:layout_alignEnd="@+id/splash" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Password:"
        android:id="@+id/textView4"
        android:layout_below="@+id/email_signup"
        android:layout_alignLeft="@+id/splash"
        android:layout_alignStart="@+id/splash" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPassword"
        android:ems="10"
        android:id="@+id/pw_signup"
        android:layout_below="@+id/textView4"
        android:layout_alignRight="@+id/splash"
        android:layout_alignEnd="@+id/splash"
        android:layout_alignLeft="@+id/splash"
        android:layout_alignStart="@+id/splash" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Confirm Password:"
        android:id="@+id/textView5"
        android:layout_below="@+id/pw_signup"
        android:layout_alignLeft="@+id/splash"
        android:layout_alignStart="@+id/splash" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPassword"
        android:ems="10"
        android:id="@+id/conpw_signup"
        android:layout_below="@+id/textView5"
        android:layout_alignLeft="@+id/splash"
        android:layout_alignStart="@+id/splash"
        android:layout_alignRight="@+id/splash"
        android:layout_alignEnd="@+id/splash" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Create Account"
        android:id="@+id/createaccnt_btn"
        android:layout_below="@+id/conpw_signup"
        android:layout_alignLeft="@+id/splash"
        android:layout_alignStart="@+id/splash"
        android:layout_marginTop="37dp"
        android:layout_alignRight="@+id/splash"
        android:layout_alignEnd="@+id/splash"
        android:background="#edb3f0" />
</RelativeLayout>