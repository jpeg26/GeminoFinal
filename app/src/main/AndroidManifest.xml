<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.mlabs.bbm.firstandroidapp_morningclass">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/Theme.AppCompat.Light.NoActionBar">
        <activity android:name=".SplashScreen">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".MainAct.user"
            android:label="@string/title_activity_user">
            <intent-filter>
                <action android:name="com.mlabs.bbm.firstandroidapp_morningclass.MainActivity.user" />

                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>
        <activity android:name=".MainAct.AccountRegister"
            android:label="@string/title_activity_account_register">
            <intent-filter>
                <action android:name="com.mlabs.bbm.firstandroidapp_morningclass.MainActivity.AccountRegister" />

                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>
        <activity android:name=".MainAct.DatabaseHelper">

        </activity>
    </application>

</manifest>